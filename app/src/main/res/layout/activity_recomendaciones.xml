<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recomendaciones"
    android:orientation="vertical"
    android:background="#cbebfb">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="110dp"
            android:layout_height="157dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="41dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toEndOf="@+id/txt3"
            app:layout_constraintTop_toBottomOf="@+id/txt1"
            app:srcCompat="@drawable/recom" />

        <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/topView"
        android:background="@drawable/wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView" />


        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="29dp"
            android:text="@string/titulo3"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.109" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="229dp"
            android:layout_height="189dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="168dp"
            android:text="@string/tema2"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.209"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt1"
            app:layout_constraintVertical_bias="0.386" />

        <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="480dp"
        android:layout_below="@id/view5"
        android:src="@drawable/reco1"
        app:layout_constraintTop_toBottomOf="@+id/view5"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_below="@id/image1"
        android:src="@drawable/reco2"
        app:layout_constraintTop_toBottomOf="@+id/image1"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_below="@id/image2"
        android:src="@drawable/reco3"
        app:layout_constraintTop_toBottomOf="@+id/image2"
        tools:layout_editor_absoluteX="0dp" />
    <ImageView
        android:id="@+id/image4"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_below="@id/image3"
        android:src="@drawable/reco4"
        app:layout_constraintTop_toBottomOf="@+id/image3"
        tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/image5"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/image4"
            android:src="@drawable/reco5"
            app:layout_constraintTop_toBottomOf="@+id/image4"
            tools:layout_editor_absoluteX="0dp" />
        <ImageView
            android:id="@+id/image6"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_below="@id/image5"
            android:src="@drawable/reco6"
            app:layout_constraintTop_toBottomOf="@+id/image5"
            tools:layout_editor_absoluteX="0dp" />
        <ImageView
            android:id="@+id/image7"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_below="@id/image6"
            android:src="@drawable/reco7"
            app:layout_constraintTop_toBottomOf="@+id/image6"
            tools:layout_editor_absoluteX="0dp" />

    </RelativeLayout>

    </ScrollView>


</LinearLayout>